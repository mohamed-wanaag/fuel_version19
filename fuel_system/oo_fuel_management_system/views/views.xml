<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- product.pricelist inherit form view -->
    <record id="product_pricelist_view" model="ir.ui.view">
        <field name="name">product.pricelist.inherit.view.form</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='pricelist_settings']" position="after">
                <group name="pricelist_station" string="Linked Station" groups="oo_fuel_management_system.group_station_management_admin">
                    <field name="station_id" readonly="1"/>
                </group>
            </xpath>

        </field>
    </record>

    <!-- hr.employee inherit form view -->
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">hr.employee.inherit.view.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <field name="department_id" position="after">
                <field name="station_ids" widget="many2many_tags"/>
            </field>

            <xpath expr="//page[@name='hr_settings']" position="after">
                <page string="Station Loss" name="station_variances" invisible="station_ids == []">
                    <field name="fms_variance_ids" readonly="1">
                        <list editable="bottom">
                            <field name="name" />
                            <field name="date"/>
                            <field name="shift_id"/>
                            <field name="employee_id" column_invisible="1"/>
                            <field name="amount" sum="Balance"/>
                        </list>
                    </field>
                </page>
            </xpath>

        </field>
    </record>

    <!-- product.template inherit form view -->
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.inherit.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">

            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="is_wet_product" />
                    <label for="is_wet_product" />
                </span>
                <span class="d-inline-block">
                    <field name="is_dry_stock" />
                    <label for="is_dry_stock" />
                </span>
            </xpath>

            <xpath expr="//field[@name='uom_id']" position="before">
                <field name="stock_type" invisible="is_dry_stock == False" required="is_dry_stock == True" />
            </xpath>
        </field>
    </record>

    <!-- sale.order inherit form view -->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.inherit.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="shift_id"/>
                <field name="station_id" invisible="shift_id == False"/>
            </xpath>

            <xpath expr="//page/field[@name='order_line']/list/field[@name='name']" position="after">
                <field name="employee_id" optional="hide"/>
            </xpath>

        </field>
    </record>

    <!-- account.payment inherit form view -->
    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">account.payment.inherit.view.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='amount']" position="after">
                <field name="shift_id"/>
                <field name="station_id" invisible="shift_id == False"/>
            </xpath>
        </field>
    </record>

</odoo>
