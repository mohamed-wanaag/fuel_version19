<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Module Category -->
        <record model="ir.module.category" id="module_station_management_category">
            <field name="name">Station Management</field>
            <field name="description">Station Management</field>
            <field name="sequence">17</field>
        </record>

        <!-- Privilege -->
        <record model="res.groups.privilege" id="priv_station_management">
            <field name="name">Station Management</field>
            <field name="sequence">10</field>
            <field name="category_id" ref="module_station_management_category"/>
        </record>

        <!-- Groups -->
        <record id="group_station_management_officer" model="res.groups">
            <field name="name">Manager</field>
            <field name="comment">Can create and edit shifts</field>
            <field name="privilege_id" ref="priv_station_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="user_ids" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="group_station_management_manager" model="res.groups">
            <field name="name">Accountant</field>
            <field name="comment">Can approve and interface a shift</field>
            <field name="privilege_id" ref="priv_station_management"/>
            <field name="implied_ids" eval="[(4, ref('group_station_management_officer'))]"/>
            <field name="user_ids" eval="[]"/>
        </record>

        <record id="group_station_management_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="comment">Administrator</field>
            <field name="privilege_id" ref="priv_station_management"/>
            <field name="implied_ids" eval="[(4, ref('group_station_management_manager'))]"/>
            <field name="user_ids" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>

    <!-- Record Rules -->
    <data noupdate="1">
        <record id="rule_station_station_multi_company" model="ir.rule">
            <field name="name">Stations multi-company</field>
            <field name="model_id" ref="model_station_station" />
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <record id="rule_station_tank_multi_company" model="ir.rule">
            <field name="name">Tanks multi-company</field>
            <field name="model_id" ref="model_station_tank" />
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <record id="rule_station_shift_multi_company" model="ir.rule">
            <field name="name">Shifts multi-company</field>
            <field name="model_id" ref="model_station_shift" />
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <record id="rule_station_shift_multi_station" model="ir.rule">
            <field name="name">Shifts multi-stations</field>
            <field name="model_id" ref="model_station_shift" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[
                (4, ref('oo_fuel_management_system.group_station_management_admin')),
                (4, ref('oo_fuel_management_system.group_station_management_manager'))
            ]"/>
        </record>

        <record id="rule_station_station_multi_station_admin_pass" model="ir.rule">
            <field name="name">Shifts multi-stations Admin</field>
            <field name="model_id" ref="model_station_station" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('oo_fuel_management_system.group_station_management_admin'))]"/>
        </record>

        <record id="rule_station_expense_multi_company" model="ir.rule">
            <field name="name">Stations Expenses multi-company</field>
            <field name="model_id" ref="model_station_expense" />
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <record id="rule_station_expense_multi_station" model="ir.rule">
            <field name="name">Stations Expenses multi-station</field>
            <field name="model_id" ref="model_station_expense" />
            <field name="domain_force">[('station_id', 'in', user.employee_id.station_ids.ids)]</field>
        </record>

        <record id="rule_station_expense_multi_station_admin" model="ir.rule">
            <field name="name">Stations Expenses multi-station Admin</field>
            <field name="model_id" ref="model_station_expense" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('oo_fuel_management_system.group_station_management_admin'))]" />
        </record>

        <record id="rule_station_own_pricelist" model="ir.rule">
            <field name="name">Pricelists Own Station</field>
            <field name="model_id" ref="model_product_pricelist" />
            <field name="domain_force">
                ['|', ('station_id', '=', False), ('station_id', 'in', user.employee_ids.station_ids.ids)]
            </field>
            <field name="groups" eval="[
                (4, ref('oo_fuel_management_system.group_station_management_admin')), 
                (4, ref('oo_fuel_management_system.group_station_management_manager'))
            ]"/>
        </record>

        <record id="rule_station_all_pricelist" model="ir.rule">
            <field name="name">Pricelists All Stations</field>
            <field name="model_id" ref="model_product_pricelist" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('oo_fuel_management_system.group_station_management_admin'))]" />
        </record>

        <!-- Default Users -->
        <record id="group_station_management_officer" model="res.groups">
            <field name="name">Manager</field>
            <field name="comment">Can create and edit shifts</field>
            <field name="privilege_id" ref="priv_station_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="user_ids" eval="[(4, ref('base.user_root'))]"/> <!-- assign users here -->
        </record>

    </data>
</odoo>
